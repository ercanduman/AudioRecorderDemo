<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium">

    <View
        android:id="@+id/recording_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_primary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recording_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_huge"
        app:layout_constraintEnd_toStartOf="@id/recording_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recording_divider"
        tools:text="Recording 1" />

    <TextView
        android:id="@+id/recording_duration"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintBottom_toBottomOf="@id/recording_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recording_divider"
        tools:text="00:12" />


</androidx.constraintlayout.widget.ConstraintLayout>